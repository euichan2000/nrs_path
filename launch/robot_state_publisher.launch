<launch>
    <arg name="file_name" default="testbed.stl"/>
    <arg name="robot_description" default="$(find xacro)/xacro --inorder '$(find nrs_ver2)/urdf/scan_model.xacro' file_name:=$(arg file_name)" />

    <!-- 로봇 설정 -->
    <param name="robot_description" command="$(arg robot_description)" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
        <param name="robot_description" value="$(arg robot_description)" />
    </node>

</launch>